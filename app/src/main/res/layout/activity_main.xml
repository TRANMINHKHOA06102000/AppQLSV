<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:background="#43E849"
        android:padding="15dp"
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/khungtimkiem"
            android:id="@+id/imageviewThem"
            android:src="@drawable/add"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <RelativeLayout
            android:id="@+id/khungtimkiem"
            android:background="@drawable/botron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:drawableTint="#ACAAA9"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/search2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D3D3CE"
                android:text="Tìm kiếm"/>
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:background="#1365B6"
        android:layout_below="@+id/search"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

</RelativeLayout>